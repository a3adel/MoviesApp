<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/movie_poster_imageview"
        android:layout_width="@dimen/item_dimen"
        android:layout_height="@dimen/item_dimen" />

    <TextView
        android:id="@+id/movie_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie_poster_imageview"
        android:layout_alignStart="@+id/movie_poster_imageview"
        android:layout_alignLeft="@+id/movie_poster_imageview"
        android:textColor="@color/textcolor"
        android:textSize="20sp"
        />

</RelativeLayout>